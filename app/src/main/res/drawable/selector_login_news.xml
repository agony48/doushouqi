<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_red" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="10dp"
                android:left="30dp"
                android:right="30dp"
                android:top="10dp" />
        </shape>
    </item>
    <!-- 普通状态 -->
