            android:id="@+id/btn_4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/classly_4"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="湖人" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/classly_6"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="皇马" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/classly_7"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="巴萨" />
        <Button
            android:id="@+id/btn_7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
