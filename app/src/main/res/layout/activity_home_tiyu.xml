            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="骑士" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/classly_3"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="火箭" />
