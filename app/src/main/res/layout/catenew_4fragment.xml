<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/eee_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@mipmap/search_home"
                android:paddingLeft="12dp"
                android:hint="请输入要搜索的关键词"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                android:background="@color/color_white"
                android:focusable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color"/>

            <com.color_analysis_in_xinjiangtimes.view.FlyBanner
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="148dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/app_name"
                android:drawableLeft="@mipmap/zixun"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:textColor="#13227a"
                android:background="@color/color_white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_nav_recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_white"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color"
                />
            <ImageView
                android:id="@+id/next_id0"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@mipmap/next_id0"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color"
                />
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="129dp">
                <ImageView
                    android:id="@+id/next_id1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/baozi_bg"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/split_line_color"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/next_id2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@mipmap/daxiang_bg"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/split_line_color"
                        />
                    <ImageView
                        android:id="@+id/next_id3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@mipmap/gougou_bg"
                        />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/m_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_white"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
